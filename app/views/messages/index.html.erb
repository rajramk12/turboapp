<p style="color: green"><%= notice %></p>

<h1>Messages</h1>
<%= turbo_stream_from 'messages'%>
<div id="new_message">
  <%= render partial: "form" , locals: { message: Message.new } %>
</div>
<div id="messages">
  <% @messages.each do |message| %>
    <%= render message %>
    <p>
      <%= link_to "Show this message", message %>
    </p>
  <% end %>
</div>

<%= link_to "New message", new_message_path %>
